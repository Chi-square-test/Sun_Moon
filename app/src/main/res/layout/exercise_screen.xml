<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise_screen"
    >


    <TextView
        android:id="@+id/tv"
        android:layout_width="305dp"
        android:layout_height="260dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="1279dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#676a6b"
        android:textSize="60sp" />

    <ProgressBar
        android:id="@+id/pb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="65dp"
        android:layout_height="610dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="675dp"
        android:progressBackgroundTint="#CBFF7676"
        android:progressDrawable="@drawable/vertical" />

    <ImageButton
        android:id="@+id/btn"
        style="@android:style/Widget.DeviceDefault.ImageButton"

        android:layout_width="135dp"
        android:layout_height="137dp"
        android:layout_below="@id/pb"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="640dp"
        android:width="30dp"
        android:height="30dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/tiger"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="41dp"

        android:background="@drawable/round"
        android:padding="7dp"
        android:text="@string/timer"
        android:textAlignment="center"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="31dp"
        android:text="1:30"
        android:textColor="#00BCD4"
        android:textSize="60sp" />


</RelativeLayout>

