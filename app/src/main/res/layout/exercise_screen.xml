<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".exercise_screen1">


    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrl"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/background">


                </ImageView>

                <Button
                    android:id="@+id/up"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|top"
                    android:text="*up*"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="338dp"
                    android:layout_height="232dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="700dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="#676a6b"
                    android:textSize="60sp" />

                <ProgressBar
                    android:id="@+id/pb"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="65dp"
                    android:layout_height="610dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="37.5dp"
                    android:layout_marginTop="305dp"
                    android:progressDrawable="@drawable/progress"
                    />


                <ImageView
                    android:id="@+id/tiger_progress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/pb"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="951dp"
                    android:src="@drawable/tiger_progress"
                    />

                <Button
                    android:id="@+id/time"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="41dp"
                    android:background="@drawable/score"
                    android:fontFamily="@font/sds"
                    android:paddingTop="30dp"
                    android:text="1:30"
                    android:textColor="#00BCD4"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/score"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="41dp"
                    android:background="@drawable/score"
                    android:fontFamily="@font/sds"
                    android:paddingTop="30dp"
                    android:text="0점"
                    android:textColor="#00BCD4"
                    android:textSize="50sp" />


                <ImageView
                    android:id="@+id/tiger_exercise"
                    android:layout_width="543dp"
                    android:layout_height="468dp"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="750dp"
                    android:rotation="-17"
                    android:rotationY="180"
                    app:srcCompat="@drawable/tiger_exercise" />

                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="181dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="42dp"
                    android:fontFamily="@font/sds"
                    android:gravity="bottom|center"
                    android:text="@string/time"
                    android:textAlignment="center"
                    android:textColor="#FFC809"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/score_title"
                    android:layout_width="181dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="41dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/sds"
                    android:gravity="bottom|center"
                    android:text="@string/점수"
                    android:textAlignment="center"
                    android:textColor="#FFC809"
                    android:textSize="45sp"
                    android:textStyle="bold" />


            </FrameLayout>`
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>