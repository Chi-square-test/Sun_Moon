<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    tools:context=".login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logout_exit"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/logout_icon_png" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/fat" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.example.sun_moon.TextGradient
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:fontFamily="@font/sds"
                android:text="JOYnT"
                android:textColor="@color/black"
                android:textSize="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sds"
                android:layout_marginLeft="40px"
                android:text="Uptrend"
                android:textColor="#530404"
                android:textSize="100dp" />
        </LinearLayout>
    </LinearLayout>


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/round2"
        android:fontFamily="@font/sds"
        android:gravity="center"
        android:hint="이름을 입력해주세요."
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50dp"
        android:privateImeOptions="defaultInputmode=korean"/>

    <Button
        android:id="@+id/next"
        android:layout_width="176dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/final_score1"
        android:fontFamily="@font/sds"
        android:text="확인"
        android:textAlignment="center"
        android:textColor="#530404"
        android:textSize="40dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>